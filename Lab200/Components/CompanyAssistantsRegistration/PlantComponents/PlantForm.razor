<MudGrid Class="d-flex flex-row justify-space-between mb-6">
    <MudItem xs="12" sm="7">
        <MudPaper Elevation="0" class="px-4 pb-6">
            <MudText Typo="Typo.h6" Style="@($"color:{Colors.Grey.Lighten1}")">Dados da Planta</MudText>
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudGrid>
                    <MudItem xs="12" sm="6">
                        <MudTextField T="string" Label="Código" @bind-Value="Plant.Code" Required="true"
                                      RequiredError="Código é obrigatório!" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudNumericField T="int?" Label="Ordem" @bind-Value="Plant.Order" Required="true"
                                      RequiredError="Ordem é obrigatório!" />
                    </MudItem>
                    <MudItem xs="12" sm="12">
                        <MudTextField T="string" Label="Função" @bind-Value="Plant.Name" Required="true"
                                      RequiredError="Função é obrigatória!" Class="mt-2" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField T="string" Label="UserID API" @bind-Value="Plant.Userid" Class="mt-2" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField T="string" Label="Senha API" @bind-Value="Plant.Password" Class="mt-2" />
                    </MudItem>
                    <MudItem xs="12" sm="12">
                        <MudTextField T="string" Label="URL API" @bind-Value="Plant.Urlapi" Class="mt-2" />
                    </MudItem>
                    <MudItem xs="12" sm="12">
                        <MudTextField T="string" Label="IdCliente API" @bind-Value="Plant.Clientid" Class="mt-2" />
                    </MudItem>
                </MudGrid>
            </MudForm>
            <div class="mt-4 d-flex justify-end flex-grow-1  gap-2">
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" DisableElevation="true"
                           OnClick="@(()=>_navigationManager.NavigateTo(Routes.PLANTS))" Class="mx-2">
                    Voltar
                </MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true"
                           OnClick="@(async ()=> await SaveAsync())" Disabled="_isProcessing">Salvar</MudButton>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="5">
        <MudPaper Class="pa-4 mud-height-full rounded-0 border-l-2 border-solid"
                  Style="@($"border-color:{Colors.Grey.Lighten1}")" Elevation="0">
            <MudAlert Severity="Severity.Info" Class="mt-2">Os campos com * são obrigatórios</MudAlert>
            @foreach (var error in errors)
            {
                <MudAlert Severity="Severity.Error" Class="mt-2">@error</MudAlert>
            }
        </MudPaper>
    </MudItem>
</MudGrid>