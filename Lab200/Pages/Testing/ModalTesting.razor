@page "/employees-item/modal"
@inherits BaseAuthComponent;
<MudDialog @bind-IsVisible="IsVisible" Options="DialogOptions">

    <DialogContent>
        @if (string.IsNullOrWhiteSpace(Content))
        {
            <Lab200.Pages.EmployeeItem.CreateEmployeeItem CloseModal="Close" />
        }
        else
        {
            @Content
        }
    </DialogContent>
</MudDialog>

<style>
    .blur {
        backdrop-filter: blur(10px);
    }

    .mud-table-header {
        background-color: #1A7BB6 !important;
    }

        .mud-table-header .mud-table-cell {
            color: white !important;
            background-color: #1A7BB6 !important;
            font-weight: bolder !important;
        }
</style>