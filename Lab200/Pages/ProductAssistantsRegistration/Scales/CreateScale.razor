@page "/product-assistants/scales/create"
@inherits BaseAuthComponent;

@attribute [Authorize]

@using Lab200.Components.ProductAssistantsRegistration.Scales;

<AuthorizeView Roles="Master">

    <MudText Typo="Typo.h4" Class="px-6 mb-6" Style="font-weight: bold;">Tamanhos</MudText>


    <MudCard Class="mx-5">

        <MudCardHeader Class="d-flex justify-space-between align-content-center flex-wrap flex-grow-1 mr-4 pb-0">
            <MudText Color="Color.Inherit" Typo="Typo.h6" Style="font-weight: bold;">Nova Categoria</MudText>
        </MudCardHeader>
        <MudCardContent>
            @if (_isProcessing)
            {
                <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Medium" Rounded Value="_progressPercent" />
            }
            <ScalesForm Scale="Scale"
                        IsParentLoading="_isProcessing"
                        OnValidSubmitAsync="HandleSaveButtonClick" />
        </MudCardContent>
    </MudCard>
</AuthorizeView>