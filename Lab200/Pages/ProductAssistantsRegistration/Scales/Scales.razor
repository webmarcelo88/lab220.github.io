@page "/product-assistants/scales"
@inherits BaseAuthComponent;

@attribute [Authorize]

@using Lab200.Components.ProductAssistantsRegistration.Scales;

<AuthorizeView Roles="Master">

    <MudText Typo="Typo.h4" Class="px-6 mb-6" Style="font-weight: bold;">Tamanhos</MudText>

    <MudCard Class="mx-5">
        <MudCardHeader Class="d-flex justify-space-between align-content-center flex-wrap flex-grow-1 mr-4">
            <MudText Color="Color.Inherit" Typo="Typo.h6" Style="font-weight: bold;">Lista de Tamanhos</MudText>
            @*<MudSpacer />
            <MudTextField @bind-Value="Search" Placeholder="Buscar funcionário" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            <MudSpacer />*@
            <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Disabled="@(IsTableLoading)" OnClick="AddNewScale">Adicionar Tamanho</MudButton>
        </MudCardHeader>
        <MudCardContent>
            @if (!ScalesList.Any() && IsTableLoading)
            {
                <MudPaper Class="d-flex align-content-center justify-center align-start pa-3 mt-4 mb-4" Elevation="0">
                    <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
                </MudPaper>
            }
            @*@if (EmployeesList != null && !EmployeesList.Any() && !IsTableLoading)
            {
            <MudPaper Class="d-flex align-content-center justify-center align-start pa-3 mt-4 mb-4" Elevation="0">
            <MudText Color="Color.Inherit" Typo="Typo.h6" Style="font-weight: bold;">Nenhum funcionário cadastrado</MudText>
            </MudPaper>
            }*@
            else
            {
                <ScalesTable IsTableLoading="IsTableLoading"
                             HasFixedFooter="false"
                             HasFixedHeader="true"
                             OnEditButtonClick="EditScale"
                             OnDeleteButtonClick="DeleteScale"
                             Scales="ScalesList" />
            }
        </MudCardContent>
    </MudCard>
</AuthorizeView>

<style>
    .blur {
        backdrop-filter: blur(10px);
    }

    .mud-table-header {
        background-color: #1A7BB6 !important;
    }

        .mud-table-header .mud-table-cell {
            color: white !important;
            background-color: #1A7BB6 !important;
            font-weight: bolder !important;
        }
</style>