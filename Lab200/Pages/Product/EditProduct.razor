@page "/products/{productId:int}/edit"
@inherits BaseAuthComponent;

@attribute [Authorize]

@using Lab200.Components.Products

<AuthorizeView Roles="Master">

    <MudText Typo="Typo.h4" Class="px-6 mb-6" Style="font-weight: bold;">Produtos</MudText>


    <MudCard Class="mx-5">

        <MudCardHeader Class="d-flex justify-space-between align-content-center flex-wrap flex-grow-1 mr-4 pb-0">
            <MudText Color="Color.Inherit" Typo="Typo.h6" Style="font-weight: bold;">Editar Produto</MudText>
        </MudCardHeader>
        <MudCardContent>
            @if (IsTableLoading)
            {
                <MudPaper Class="d-flex align-content-center justify-center align-start pa-3 mt-4 mb-4" Elevation="0">
                    <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
                </MudPaper>
            }
            @if (_isProcessing)
            {
                <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Medium" Rounded Value="_progressPercent" />
            }
            @if (!IsTableLoading)
            {
                <ProductForm Product="Product"
                             Grids="Grids"
                             Categories="Categories"
                             Colours="Colours"
                             Plants="Plants"
                             Scales="Scales"
                             Types="ProductTypes"
                             IsParentLoading="IsTableLoading"
                             OnDeleteButtonClickAsync="HandleDeleteButtonClick"
                             OnValidSubmitAsync="HandleSaveButtonClick" />
            }
        </MudCardContent>
    </MudCard>
</AuthorizeView>