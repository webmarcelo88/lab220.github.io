@page "/company/web-users/{userId:int}/edit"
@inherits BaseAuthComponent;

@attribute [Authorize]

@using Lab200.Components.Company.WebUser
@using Lab200.Components.Company.WebUser.Loadings

<AuthorizeView Roles="Master">

    <MudText Typo="Typo.h4" Class="px-6 mb-6" Style="font-weight: bold;">Usuários Web</MudText>


    <MudCard Class="mx-5">

        <MudCardHeader Class="d-flex justify-space-between align-content-center flex-wrap flex-grow-1 mr-4">
            <MudText Color="Color.Inherit" Typo="Typo.h6" Style="font-weight: bold;">Editar Usuário Web</MudText>
        </MudCardHeader>
        <MudCardContent>
            @if (_isProcessing)
            {
                <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Medium" Rounded Value="_progressPercent" />
            }
            @if (_isLoading)
            {
                <WebUserFormLoading />
            }
            else
            {
                <WebUserForm User="User" OnValidSubmitAsync="HandleSaveButtonClick" IsParentLoading="_isLoading" />
            }
        </MudCardContent>
    </MudCard>
</AuthorizeView>